<resources>

    <!-- Base application theme. -->
    <style name="MainAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:itemBackground">@color/colormenuBackground</item>
        <item name="android:itemTextAppearance">@style/ActionBar.MenuTextStyle</item>
    </style>

    <style name="ActionBar.MenuTextStyle"
        parent="style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="fontName">@string/font.opensans.regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="App.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/colormenuBackground</item>
    </style>

    <style name="ButtonText">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">@string/font.opensans.bold</item>
    </style>

    <style name="ButtonBlue" parent="ButtonText">
        <item name="android:background">@drawable/selector_button_active</item>
    </style>

    <style name="ButtonHomeRegister" parent="ButtonBlue">
        <item name="fontName">@string/font.opensans.semibold</item>
    </style>

    <style name="DialogLayout">
        <item name="android:paddingTop">@dimen/dialog_padding_top</item>
        <item name="android:paddingLeft">@dimen/dialog_padding_left</item>
        <item name="android:paddingRight">@dimen/dialog_padding_right</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_bottom</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DialogTitleText" >
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/extra_text_size</item>
        <item name="android:textColor">@color/colorDialogText</item>
        <item name="fontName">@string/font.opensans.bold</item>
    </style>

    <style name="DialogTitleDescription">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium3_text_size</item>
        <item name="android:textColor">@color/colorDialogText</item>
        <item name="fontName">@string/font.opensans.regular</item>
    </style>

    <style name="ButtonOK" parent="ButtonText">
        <item name="android:lineSpacingExtra">0.5dp</item>
    </style>

    <style name="ButtonCancel" parent="ButtonText">
        <item name="android:lineSpacingExtra">0.5dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>
