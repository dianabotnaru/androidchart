<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">@string/font.opensans.bold</item>
    </style>

    <style name="MainToolbarNext">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/color_button_next</item>
        <item name="fontName">@string/font.opensans.semibold</item>
    </style>

    <style name="ActivityLayoutMargin" >
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="InfoDescriptionText" >
        <item name="android:textSize">@dimen/medium2_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontName">@string/font.opensans.regular</item>
    </style>

    <style name="InfoTitleText" >
        <item name="android:textSize">@dimen/medium3_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">@string/font.opensans.semibold</item>
    </style>

    <style name="InfoDisclaimerButton" parent="ButtonText" >
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MainInformationLayout" >
        <item name="android:layout_width">@dimen/main_information_layout_width</item>
        <item name="android:layout_height">@dimen/main_information_layout_height</item>
        <item name="android:background">@drawable/shape_layout_black</item>
    </style>

    <style name="BacDisclaimerButton" parent="ButtonText" >
        <item name="android:layout_width">@dimen/bac_deisclaimer_button_width</item>
        <item name="android:layout_height">@dimen/bac_deisclaimer_button_height</item>
    </style>

    <style name="BacEstimatorLayout" >
        <item name="android:layout_marginTop">@dimen/bac_estimator_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/bac_estimator_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/bac_estimator_horizontal_margin</item>
    </style>

    <style name="BacEstimatorElmentTitle" >
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontName">@string/font.opensans.semibold</item>
    </style>

    <style name="BacEstimatorElmentSmallTitle" >
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">@string/font.opensans.regular</item>
    </style>


    <style name="EditText" >
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">@string/font.opensans.regular</item>
    </style>

    <style name="BacEstimatorElmentEditText" parent="EditText" >
        <item name="android:background">@drawable/shape_edittext</item>
        <item name="android:layout_height">@dimen/edittext_height</item>
        <item name="android:paddingLeft">@dimen/edittext_padding_left</item>
        <item name="android:layout_marginTop">@dimen/edittext_margin_top</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="BacEstimatorCheckBoxText" parent="EditText" >
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="HistoryLayout" >
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="HistoryDatePickUpLayout" >
        <item name="android:paddingLeft">@dimen/history_layout_vertical_padding</item>
        <item name="android:paddingRight">@dimen/history_layout_vertical_padding</item>
    </style>

    <style name="HistoryDatePickUpText" parent="ButtonText">
        <item name="fontName">@string/font.opensans.regular</item>
    </style>

    <style name="AddDrinkSelectDateLayout" >
        <item name="android:background">@drawable/shape_layout_black</item>
        <item name="android:layout_marginTop">@dimen/main_item_top_margin</item>
        <item name="android:layout_height">@dimen/main_normal_button_height</item>
    </style>

    <style name="AddDrinkButton" parent="ButtonBlue" >
        <item name="android:background">@drawable/selector_button_active</item>
        <item name="android:layout_marginTop">@dimen/main_item_top_margin</item>
    </style>

    <style name="BacEstimationLayout" >
        <item name="android:layout_marginTop">@dimen/bac_estimation_top_margin</item>
        <item name="android:layout_marginLeft">@dimen/bac_estimation_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/bac_estimation_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/bac_estimation_bottom_margin</item>
    </style>

    <style name="BacEstimationUnitsText" >
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">@string/font.opensans.semibold</item>
    </style>

</resources>
