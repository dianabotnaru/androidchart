<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">@string/font.opensans.bold</item>
    </style>

    <style name="ActivityLayoutMargin" >
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="InfoDescriptionText" >
        <item name="android:textSize">@dimen/medium2_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">@string/font.opensans.regular</item>
    </style>

    <style name="InfoDisclaimerButton" parent="ButtonText" >
        <item name="android:textColor">@color/blue  </item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ContactUsInformationLayout" >
        <item name="android:layout_width">@dimen/contactus_information_layout_width</item>
        <item name="android:layout_height">@dimen/contactus_information_layout_height</item>
        <item name="android:background">@drawable/shape_layout_contactus_information</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ContactUsText" >
        <item name="android:textSize">@dimen/medium3_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontName">@string/font.opensans.semibold</item>
    </style>

</resources>
