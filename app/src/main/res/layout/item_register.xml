<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    style="@style/RegisterItemLayout"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/RegisterItemTitle"
        android:id="@+id/text_title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_register_text_top_margin">

        <EditText
            android:layout_width="match_parent"
            android:inputType="textPersonName"
            style="@style/RegisterItemText"
            android:ems="10"
            android:id="@+id/editText"/>

        <ImageButton
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icn_dropdown"
            android:id="@+id/button_profile_item_dropdown"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/item_register_input_dropdown_right_margin"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>