<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        style="@style/ActivityLayoutMargin">

        <TextView
            android:text="@string/contactus.description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            style="@style/InfoDescriptionText"
            />

        <RelativeLayout
            style="@style/ContactUsInformationLayout"
            android:layout_marginTop="39dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icn_contact"
                android:id="@+id/image_contact"
                android:layout_marginLeft="12dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_contact"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/image_contact"
                style="@style/ContactUsText" />

        </RelativeLayout>

        <RelativeLayout
            style="@style/ContactUsInformationLayout"
            android:layout_marginTop="24dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icn_contact"
                android:id="@+id/image_version"
                android:layout_marginLeft="12dp" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_version"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/image_version"
                style="@style/ContactUsText" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>