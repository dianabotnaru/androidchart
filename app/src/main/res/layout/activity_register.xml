<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_register" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.alcoholcountermeasuresystems.android.elan.views.ProfileInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_firstname"
                    app:itemTitle = "@string/register.profile.firstname" />

                <com.alcoholcountermeasuresystems.android.elan.views.ProfileInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_lastname"
                    app:itemTitle = "@string/register.profile.lastname" />

                <com.alcoholcountermeasuresystems.android.elan.views.ProfileInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_email"
                    app:itemTitle = "@string/register.profile.email" />

                <com.alcoholcountermeasuresystems.android.elan.views.ProfileInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_language"
                    app:itemTitle = "@string/register.profile.language" />

                <com.alcoholcountermeasuresystems.android.elan.views.ProfileInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_country"
                    app:itemTitle = "@string/register.profile.country" />

                <com.alcoholcountermeasuresystems.android.elan.views.ProfileInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_serial"
                    app:itemTitle = "@string/register.profile.serial" />

                <com.alcoholcountermeasuresystems.android.elan.views.ProfileInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_purchased"
                    app:itemTitle = "@string/register.profile.purchased" />

                <com.alcoholcountermeasuresystems.android.elan.views.ProfileInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_location"
                    app:itemTitle = "@string/register.profile.location" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/blue_button_height"
                    android:weightSum="3"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/blue_button_margin"
                    android:layout_marginBottom="@dimen/blue_button_margin">

                    <Button
                        android:text="@string/register.button.title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/button"
                        style="@style/ButtonBlue"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>