<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ActivityLayoutMargin">

        <TextView
            android:text="@string/menu.disclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            style="@style/InfoTitleText"
            />

        <TextView
            android:text="@string/bac.disclaimer.description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            style="@style/InfoDescriptionText"
            android:layout_marginTop="11dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="27dp">

            <Button
                android:text="@string/button.cancel"
                style="@style/BacDisclaimerButton"
                android:id="@+id/button_cancel"
                android:background="@drawable/shape_button_red"
                android:layout_weight="1"
                android:layout_marginRight="10dp" />

            <Button
                android:text="@string/button.accept"
                style="@style/BacDisclaimerButton"
                android:id="@+id/button_accept"
                android:background="@drawable/shape_button_blue"
                android:layout_weight="1"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>