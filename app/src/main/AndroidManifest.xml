<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alcoholcountermeasuresystems.android.elan">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MainAppTheme">
        <activity android:name=".activities.main.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.main.MainActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.RegisterActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.InformationActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.ContactUsActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.BacDisclaimerActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.BacEstimatorActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.HistoryActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.AddDrinkActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>